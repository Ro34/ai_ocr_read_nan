<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 开发环境：允许明文 HTTP，便于访问局域网 IP。生产环境建议改为仅信任 HTTPS。 -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
